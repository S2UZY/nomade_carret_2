{
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 100,
  "semi": false,
  "importOrder": [
    "^react(-dom)?(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@repo/(.*)$",
    "^@/(.*)$",
    "^\\./(.*)$",
    "^\\.\\./(.*)"
  ],
  "importOrderSeparation": true,
  "importOrderParserPlugins": ["typescript", "decorators", "jsx"],
  "tailwindFunctions": ["clsx"],
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
